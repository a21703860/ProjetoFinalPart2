<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filme_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:backgroundTint="@color/primaryColor"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/filme_fotografia_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/nome_filme_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/filme_fotografia_image_view"
            android:layout_toEndOf="@id/filme_fotografia_image_view"
            android:text="@string/nome_do_filme"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/cinema_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nome_filme_edit_text"
            android:layout_toEndOf="@id/filme_fotografia_image_view"
            android:text="@string/nome_do_cinema"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/avaliacao_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cinema_edit_text"
            android:layout_toEndOf="@id/filme_fotografia_image_view"
            android:text="@string/avalia_o"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/data_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avaliacao_valor"
            android:layout_toEndOf="@id/filme_fotografia_image_view"
            android:text="@string/data_de_visualizacao"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white" />



        <TextView
            android:id="@+id/observacoes_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_edit_text"
            android:layout_toEndOf="@id/filme_fotografia_image_view"
            android:text="@string/observaces"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/postCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avaliacao_valor"
            android:layout_marginStart="38dp"
            android:layout_marginTop="85dp"
            android:layout_toEndOf="@id/filme_fotografia_image_view"
            android:text="codigoPostal"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
